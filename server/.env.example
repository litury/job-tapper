# Порт, на котором будет запущен сервер
PORT=3000

# URL клиентского приложения (для CORS и OAuth редиректов)
CLIENT_URL=http://localhost:5173

# Идентификатор клиента HeadHunter API
# Получить можно на https://api.hh.ru/openapi/redoc
# Инструкция: создайте приложение в личном кабинете разработчика HH
HH_CLIENT_ID=your_hh_client_id_here

# Секретный ключ клиента HeadHunter API
# Получается вместе с Client ID при создании приложения
HH_CLIENT_SECRET=your_hh_client_secret_here

# Базовый URL API HeadHunter
HH_API_URL=https://api.hh.ru

# URI для перенаправления после OAuth авторизации
# Должен соответствовать настройкам в приложении HH
HH_REDIRECT_URI=http://localhost:5173/oauth/callback
